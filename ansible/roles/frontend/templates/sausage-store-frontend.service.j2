[Unit]
Description=Sasuage Store frontend server

[Service]
User={{FRONTEND_USER}}
ExecStart=sudo http-server /var/www-data/frontend/ -p 80 --proxy http://localhost:8080
Restart=always
StandardOutput=file:/opt/log/sausage-store-frontend.log
StandardError=file:/opt/log/sausage-store-frontend-error.log

[Install]
WantedBy=multi-user.target
